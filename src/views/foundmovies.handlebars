{{#if assets.pageFoundMovies.css}}
    <link href="{{assets.pageFoundMovies.css}}" rel="stylesheet">
{{/if}}
<script>
    window.SERVER_DATA = window.SERVER_DATA || {};
</script>
<div class='card bg-transparent-dark text-light mb-4'>
    <div class='card-header d-flex justify-content-between align-items-center'>
        <h1 class="ms-3 me-3 display-3 mb-0">{{title}}</h1>
        <div class="d-flex justify-content-between align-items-end my-2">
            <div class="ms-auto">
                <a href='/' class='btn btn-primary' title='See the installation and configuration instructions'>
                    <i class='fas fa-code'></i> Configuration
                </a>
                <a href='/movies/missing' class='btn btn-success'
                   title='See the movies that are missing from PTP'>
                    <i class='fas fa-champagne-glasses'></i> Missing Movies
                </a>
                <a href='/movies/ignored' class='btn btn-warning'
                   title="See the movies that you've marked ignored">
                    <i class='fas fa-not-equal'></i> Ignored Movies
                </a>
                <a href='/movies/found' class='btn btn-danger disabled-link'
                   title='See the movies that already exist on PTP'>
                    <i class='fas fa-ban'></i> Found Movies
                </a>
            </div>
        </div>
    </div>
    <div class='card-body'>
        <div class='row mb-3'>
            <div class='col text-end'>
                <div id='datatable-buttons' class='btn-group align-items-'>
                    <button
                            class='btn btn-danger'
                            id='initializeDatatables'
                            title='This will take a long time once your list grows to a few thousand entries.'
                            disabled
                    >
                        Initialize DataTables
                    </button>
                </div>
            </div>
        </div>
        <div class='table-responsive mt-3'>
            <table id='foundTable' class='table table-striped table-dark'>
                <thead>
                <tr>
                    <th>IMDB URL</th>
                    <th>Tracker URL</th>
                    <th>PTP API Data</th>
                    <th>Added</th>
                </tr>
                </thead>
                <tbody>
                {{#each movies}}
                    <tr>
                        <td>
                            <a href='{{this.imdb_url}}' class='text-light' target='_blank'>
                                {{this.imdb_url}}
                            </a>
                        </td>
                        <td>
                            <a href='{{this.imdb_url}}' class='text-light' target='_blank'>
                                {{this.url}}
                            </a>
                        </td>
                        <td>
                            <label>
                                <textarea class='p-3' rows='10' readonly>{{json this.ptp_data}}</textarea>
                            </label>
                        </td>
                        <td>{{this.timestamp}}</td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>
{{#if assets.pageFoundMovies.js}}
    <script src="{{assets.pageFoundMovies.js}}"></script>
{{/if}}